{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeMinor",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
  ],
  "dependencyDashboard": false,
  "labels": [
    "dependencies"
  ],
  "pruneBranchAfterAutomerge": true,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "groupName": "github-actions non-major dependencies",
      "groupSlug": "github-actions-minor-patch",
      "labels": [
        "dependencies",
        "ignore for release",
      ],
      "matchManagers": [
        "github-actions",
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
    },
    {
      "groupName": "pub non-major dependencies",
      "groupSlug": "pub-minor-patch",
      "matchManagers": [
        "pub",
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
    },
    {
      "groupName": "flutter",
      "matchPackageNames": [
        "dart",
        "flutter",
      ],
    },
    {
      "groupName": "riverpod",
      "matchPackageNames": [
        "flutter_riverpod",
        "hooks_riverpod",
        "riverpod",
      ],
      "matchPackagePrefixes": [
        "riverpod_",
      ]
    },
    {
      "groupName": "isar",
      "matchPackageNames": [
        "isar",
        "isar_flutter_libs",
      ],
    },
    {
      "groupName": "firebase",
      "matchPackagePrefixes": [
        "firebase_",
      ]
    },
    {
      "groupName": "widgetbook",
      "matchPackageNames": [
        "widgetbook",
        "widgetbook_generator",
      ]
    }
  ]
}
